{
  "name": "hello-pdf",
  "version": "1.0.0",
  "description": "Hello-PDF micro service for web.",
  "scripts": {
    "start": "yarn start:server & yarn start:worker",
    "start:server": "ts-node -P tsconfig.json src",
    "start:worker": "ts-node -P tsconfig.json lib/consumer/index.ts",
    "test": "yarn test-e2e",
    "test-e2e": "yarn test-e2e:sync && yarn test-e2e:async",
    "test-e2e:sync": "ts-node tests/sync.ts",
    "test-e2e:async": "ts-node tests/async.ts",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "build:force": "tsc --build --force"
  },
  "bin": {
    "hello-pdf-server": "./bin/hello-pdf-server",
    "hello-pdf-worker": "./bin/hello-pdf-worker"
  },
  "dependencies": {
    "bull": "^4.1.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "multer": "^1.4.4",
    "puppeteer": "^13.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/bull": "^3.15.7",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.178",
    "@types/multer": "^1.4.7",
    "express-print-routes": "^1.0.0",
    "form-data": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.3"
  }
}
